<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>location name</th>
      <th>latitude</th>
      <th>longitude</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each placelist.locations}}
      <tr>
        <td>
          {{locationname}}
        </td>
        <td>
          {{latitude}}
        </td>
        <td>
          {{longitude}}
        </td>
        <td>
          <a href="/location/{{../placelist._id}}/editlocation/{{_id}}" class="ui icon button">
            <i class="fas fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/placelist/{{../placelist._id}}/deletelocation/{{_id}}" class="ui icon button">
            <i class="fas fa-trash"></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
